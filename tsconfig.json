{
    "compilerOptions": {
      "target": "esnext",
      "module": "commonjs",
      "strict": true,
      "baseUrl": ".",
      "esModuleInterop": true,
      "outDir": "dist",
      "resolveJsonModule": true,
      "paths": {

        "test": ["./test"],
        "test/*": ["./test/*"],
        "scripts": ["./scripts"],
        "scripts/*": ["./scripts/*"],
        "typechain": ["./typechain-types"],
        "typechain/*": ["./typechain-types/*"],
      },
    },
    "include": [
      "./scripts",
      "./test",
      "./typechain-types"
    ],
    "files": ["./hardhat.config.ts"]
  }